{
    "name": "miku",
    "displayName": "miku鼓励师",
    "description": "写代码不再孤单，miku陪你一块脑阔疼",
    "version": "0.1.2",
    "publisher": "mengmoli",
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "miku",
        "初音未来",
        "鼓励"
    ],
    "bugs": {
        "url": "https://github.com/formulahendry/vscode-ycy/issues",
        "email": "formulahendry@gmail.com"
    },
    "homepage": "https://github.com/mengmoli/vscode-miku/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/mengmoli/vscode-miku.git"
    },
    "activationEvents": [
        "onCommand:miku.showReminderView",
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "miku.showReminderView",
                "title": "打开提醒页面",
                "category": "miku"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "miku",
            "properties": {
                "ycy.reminderViewIntervalInMinutes": {
                    "type": "number",
                    "default": 60,
                    "description": "展示提醒页面的时间间隔（分钟）"
                },
                "ycy.title": {
                    "type": "string",
                    "default": "写代码不再孤单，miku陪你一块脑阔疼~",
                    "description": "页面内展示文字"
                },
                "ycy.type": {
                    "type": "string",
                    "default": "default",
                    "description": "类型：default:默认图；url：网络图"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
